# Color LS
# See https://github.com/athityakumar/colorls
alias ls='colorls --sd -A'

# EPFL LDAP
alias ldapse='ldapsearch -x -LLL -H ldap://ldap.epfl.ch/ -b '\''c=ch'\'''
alias scoldapse='ldapsearch -x -LLL -H ldap://scoldap.epfl.ch/ -b '\''o=epfl,c=ch'\'''

# EPFL Service Open
# https://metacpan.org/pod/distribution/EPFL-Service-Open/bin/epfl-service-open
alias eso='epfl-service-open >/dev/null'
